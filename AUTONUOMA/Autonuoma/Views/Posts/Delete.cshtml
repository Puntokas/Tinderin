@model Org.Ktu.Isk.P175B602.Autonuoma.Models.Post

@{
    ViewData["title"] = "Post Deletion";
}

<div class="main-content-header">
    <span class="title">@ViewData["title"]</span>
    <span class="actions">
        <a href="@Url.Action("Index")" class="btn btn-outline-primary btn-sm">
            <i class="fa-solid fa-angles-left"></i> Back to the list
        </a>
    </span>
</div>

<div class="main-content-ced">
    @using (Html.BeginForm(FormMethod.Post, new { @class = "entity-d" }))
    {
        @Html.AntiForgeryToken()

        <fieldset>
            <legend class="confirm-msg">Do you really want to delete this Post?</legend>

            <dl>
                <dt>@Html.DisplayNameFor(m => m.Content)</dt>
                <dd>@Html.DisplayFor(m => m.Content)</dd>
            </dl>

            <!-- Add other fields as needed -->
            @if (ViewData["deletionNotPermitted"] != null)
            {
                <div class="fail-msg">
                    <i class="fa-solid fa-circle-exclamation"></i> Post cannot be deleted because...
                </div>
            }
            else
            {
                <div class="buttons">
                    <button formaction="@Url.Action("DeleteConfirm", new {id = Model.PostId})"
                            class="btn btn-danger"
                            style="white-space: nowrap;">
                        <i class="fa-solid fa-trash"></i> Delete
                    </button>
                </div>
            }
        </fieldset>
    }
</div>

<div class="main-content-footer">
    <span class="title"></span>
    <span class="actions">
        <a href="@Url.Action("Index")" class="btn btn-outline-primary btn-sm">
            <i class="fa-solid fa-angles-left"></i> Back to the list
        </a>
    </span>
</div>
