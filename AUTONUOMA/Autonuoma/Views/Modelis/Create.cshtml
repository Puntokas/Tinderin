@model Org.Ktu.Isk.P175B602.Autonuoma.Models.Modelis.ModelisCE

@* this will also be used as page title in main layout *@
@{ ViewData["title"] = "Modelio sukūrimas"; }

@* content header *@
<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>

@* content itself *@
<div class="main-content-ced">
@using( Html.BeginForm(FormMethod.Post, new { @class="entity-ce" }) )
{
	@Html.AntiForgeryToken()

	@Html.ValidationSummary(true, "", new { @class = "text-danger" })


	<fieldset>
		<legend class="text-center">Modelis</legend>

		<div class="form-group">	
			@Html.LabelFor(m => m.Modelis.Pavadinimas)
				@Html.EditorFor(m => m.Modelis.Pavadinimas)
				@Html.ValidationMessageFor(m => m.Modelis.Pavadinimas, "")
		</div>

		<div class="form-group">	
			@Html.LabelFor(m => m.Modelis.IsleidimoMetai)
				@Html.EditorFor(m => m.Modelis.IsleidimoMetai)
				@Html.ValidationMessageFor(m => m.Modelis.IsleidimoMetai, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Modelis.Marke)
				@Html.DropDownListFor(m => m.Modelis.Marke, Model.Lists.Marke, (string)ViewData["none-chosen"])
				@Html.ValidationMessageFor(m => m.Modelis.Marke, "")
		</div>


	</fieldset>

	<fieldset>
		<div class="container-fluid d-flex d-row justify-content-between align-items-center">
			<span></span>
			<legend style="width: unset; margin-bottom: 0px;">Automobiliai</legend>
			<button
				name="add"
				value="1"
				formnovalidate @*ASP.NET Core magic attribute to prevent client side validation when submit button is clicked*@
				formaction="@Url.Action()#listEnd"
				class="btn btn-info"
			><i class="fa-solid fa-plus"></i> Pridėti</button>
		</div>

		<table>
			<thead>
				<tr>
					<th>VIN kodas</th>
					<th>Pagaminimo data</th>
					<th>Masė</th>
					<th>Pavarų dėžė</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@for( var i = 0; i < Model.Automobiliai.Count; i++ ) {
				<tr>
					
					<td class="form-group">
						@Html.EditorFor(m => m.Automobiliai[i].Vin_kodas)
						@Html.ValidationMessageFor(m => m.Automobiliai[i].Vin_kodas, "")
					</td>
					<td class="form-group">
						@Html.EditorFor(m => m.Automobiliai[i].PagaminimoData)
						@Html.ValidationMessageFor(m => m.Automobiliai[i].PagaminimoData, "")
					</td>
					<td class="form-group">
						@Html.EditorFor(m => m.Automobiliai[i].Mase)
						@Html.ValidationMessageFor(m => m.Automobiliai[i].Mase, "")
					</td>
					<td class="form-group">
						@* add hidden form fields for non-visible properties, otherwise they will get lost in code that handles button presses *@
						@Html.HiddenFor(m => m.Automobiliai[i].InListId)

						@Html.DropDownListFor(
							m => m.Automobiliai[i].PavaruDeze, 
							Model.Lists.PavaruDeze, 
							(string)ViewData["none-chosen"]
						)
						@Html.ValidationMessageFor(m => m.Automobiliai[i].PavaruDeze, "")
					</td>

					<td>
						<button
							name="remove"
							value="@Model.Automobiliai[i].InListId"
							formnovalidate @*ASP.NET Core magic attribute to prevent client side validation when submit button is clicked*@
							formaction="@Url.Action()#listEnd"
							class="btn btn-danger"							
						><i class="fa-solid fa-trash"></i> Šalinti</button>
					</td>
				</tr>
				}
			</tbody>
		</table>

		@* this is used as a marker to automatically scroll down to the end of items list when returning from button presses *@
		<span id="listEnd"></span>
	</fieldset>

	<div class="container-fluid d-flex d-row justify-content-end">
		<button name="save" value="1" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i> Išsaugoti</button>
	</div>
}
</div>

@* content footer *@
<div class="main-content-footer">
	<span class="title"></span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>